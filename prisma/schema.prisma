generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// medicine model
model Medicine {
  id             String      @id @default(uuid())
  med_name       String      @db.VarChar(50)
  med_des        String      @db.Text
  manufacturer   String      @db.VarChar(30)
  stock_quantity String      @db.VarChar(5)
  expiry_date    DateTime
  image_url      String
  seller_id      String
  category_id    String
  category       Category    @relation(fields: [category_id], references: [id])
  is_active      Boolean     @default(true)
  created_at     DateTime    @default(now())
  updated_at     DateTime    @updatedAt
  reviews        Review[]
  orderItems     OrderItem[]

  @@index([med_name])
  @@index([manufacturer])
  @@index([category_id])
  @@map("medicines")
}

// category model 
model Category {
  id            String     @id @default(uuid())
  category_name String     @db.VarChar(50)
  descripting   String     @db.Text
  created_at    DateTime   @default(now())
  updated_at    DateTime   @updatedAt
  medicines     Medicine[]

  @@index([category_name])
  @@map("Categories")
}

// Order model
model Order {
  id               String        @id @default(uuid())
  customer_id      String
  total_amount     String
  shipping_address String
  payment_method   PaymentMethod @default(Cash_On_Delivery)
  status           OrderStatus   @default(placed)
  created_at       DateTime      @default(now())
  updated_at       DateTime      @updatedAt
  orderItems       OrderItem[]

  @@index([customer_id])
  @@index([status])
  @@map("orders")
}

// Order model enum
enum PaymentMethod {
  Cash_On_Delivery
  sslcommerz
  bkash
  nagad
  rocket
}

enum OrderStatus {
  placed
  processing
  shipped
  delivered
  cancelled
}

// Order item
model OrderItem {
  id                String   @id @default(uuid())
  order_id          String
  order             Order    @relation(fields: [order_id], references: [id])
  medicine_id       String
  medicine          Medicine @relation(fields: [medicine_id], references: [id])
  seller_id         String
  quantity          String
  price_at_purchase String
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt
}

// Reviews 
model Review {
  id          String   @id @default(uuid())
  medicine_id String
  medicine    Medicine @relation(fields: [medicine_id], references: [id])
  customer_id String
  rating      String
  comment     String
  created_at  DateTime @default(now())

  @@index([medicine_id])
  @@index([customer_id])
  @@map("reviews")
}
